@page
@model ThreeAmigosWebApp.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>

<div>
    <p>Name: @Model.User.Identity.Name</p>
    <p>Email: @Model.UserProfile.EmailAddress</p>
    <div>
        <img src= @Model.UserProfile.ProfileImage>
    </div>
    <P>Funds: @Model.UserProfile.Funds</P>
</div>